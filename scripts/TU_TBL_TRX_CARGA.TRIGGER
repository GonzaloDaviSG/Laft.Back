CREATE OR REPLACE  TRIGGER LAFT.TU_TBL_TRX_CARGA
AFTER UPDATE
   ON LAFT.TBL_TRX_CARGA
   FOR EACH ROW
DECLARE
BEGIN
    INSERT INTO LAFT.TBL_HIS_CARGA(NID,DREGISTRO,SUSUARIO,NESTADO,
                            SUSERDB,SUSERPC,SIP,SHOST,DREGHIS,STIPHIS)
    VALUES(:NEW.NID,:NEW.DREGISTRO,:NEW.SUSUARIO,:NEW.NESTADO,
                            SYS_CONTEXT('USERENV','SESSION_USER'),SYS_CONTEXT('USERENV','OS_USER'),SYS_CONTEXT('USERENV','IP_ADDRESS'),SYS_CONTEXT('USERENV','HOST'),SYSDATE  ,'U');                                                        
END;


